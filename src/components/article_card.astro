---
import type { CollectionEntry } from 'astro:content';

interface Props {
  // Diciamo che la prop 'post' deve avere la struttura di una nota
  post: CollectionEntry<'notes'>; 
}

// Estrai la prop 'post'
const { post } = Astro.props;
---


<a href={`/notes/${post.data.title}`} class="group relative pl-4 sm:pl-6 py-1 block">
        
        <div class="absolute left-0 top-0 bottom-0 w-1 bg-gray-200 rounded-full group-hover:bg-green-800 transition-colors duration-300"></div>

        <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline">
            <h3 class="font-semibold text-lg group-hover:text-green-800 transition-colors">
                {post.data.title}
            </h3>
            <span class="text-xs text-gray-400 mt-1 sm:mt-0">
                {post.data.date.toLocaleDateString('it-IT', { year: 'numeric', month: 'numeric', day: 'numeric' })}
            </span>
        </div>

        <div class="flex gap-3 mt-1">
             {post.data.tags.map((tag) => ( 
                <span class="text-xs text-gray-500 font-medium">
                    #{tag}
                </span>
            ))}
        </div>
    </a>